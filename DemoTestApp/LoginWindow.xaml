<Window x:Class="DemoTestApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoTestApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid  HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Введите имя пользователя"/>
            <TextBox Grid.Row="1" x:Name="UsernameBox"/>
            <TextBlock Grid.Row="2" Text="Введите пароль" />
            <TextBox Grid.Row="3" x:Name="PasswordBox"/>
            <Button Grid.Row="4" Margin="4" Content="Авторизоваться" x:Name="AuthButton" Click="AuthButton_Click"/>
        </Grid>
</Window>
